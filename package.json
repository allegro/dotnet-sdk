{
  "name": "SDK",
  "devDependencies": {
    "markdownlint": "^0.27.0",
    "markdownlint-cli": "^0.33.0",
    "prettier": "^2.8.3"
  },
  "scripts": {
    "format:markdown": "prettier --write \"**/**/*.md\" --prose-wrap always --parser markdown",
    "format:check:markdown": "prettier --check \"**/**/*.md\" --prose-wrap always --parser markdown",
    "format:lint:markdown": "markdownlint --fix --ignore node_modules --fix \"**/**/*.md\""
  }
}
